<% layout('/layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px;">

</div>
<h1>Campgrounds</h1>
<a href="/campgrounds/new">New</a><br>
<% for(camp of campgrounds){ %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=camp.images[0].url%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <h3><%= camp.properties.popUpMarkup  %> </h3>
                    <a href="/campgrounds/<%= camp.id %> "><%= camp.title %></a>
                </h5>
                <p class="card-text">
                    <%= camp.description  %>
                </p>
                <p class="card-text">
                    <small class="text-muted">
                        <%= camp.location  %>
                    </small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%= camp.id %> ">View <%= camp.title %></a>
            </div>
        </div>
    </div>
</div>
<% } %>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
</script>
<script>
    const campgrounds = {
        features: <%-JSON.stringify(campgrounds)%>
    }
</script>
<script src="js/clusterMap.js"></script>